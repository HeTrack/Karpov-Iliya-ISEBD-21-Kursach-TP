
@{
    ViewData["Title"] = "Блокировка";
}
<div class="text-center text-info">
    <h1>Блокировка</h1>
</div>
@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>Логин</td>
            <td>Клиент</td>
            <td>Почта</td>
            <td>Блокировка</td>
            <td>Заблокировать/разблокировать</td>
        </tr>
        @foreach (var client in ViewBag.Clients)
        {
            <tr>
                <td>@client.Login</td>
                <td>@client.FIO</td>
                <td>@client.Email</td>
                <td>@client.BlockStatus</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Admin/Block/@client.ID">Заблокировать/разблокировать</a>
                </td>
            </tr>
        }
    </table>
}

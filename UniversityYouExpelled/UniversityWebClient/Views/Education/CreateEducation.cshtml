@model UniversityWebClient.Models.CreateEducation

@{
    ViewData["Title"] = "Сформировать обучение";
}

<div class="text-center text-info">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @style = "color: red" })
    <p>Мой курс обучения:</p>
    <table class="table">
        <tr>
            <td><justify>Курс</justify></td>
            <td><justify>ФИО Преподавателя</justify></td>
            <td>Дата начала курса</td>
            <td>Цена</td>
        </tr>
        @foreach (UniversityBusinessLogic.ViewModels.CourseViewModel course in ViewBag.EducationCourses)
        {
    <tr>
        <td><justify>@course.CourseName</justify></td>
        <td><justify>@course.LecturerFIO</justify></td>
        <td>@course.StartCourse</td>
        <td>@course.Cost</td>
        <td><input type="checkbox" name="Model.EducationCourses[@course.Id]" value="0"/></td>
    </tr>
        }
    </table>
    <button type="submit" class="btn btn-info btn-sm">Создать</button>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
